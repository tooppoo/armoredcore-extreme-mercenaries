{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>tooppoo/renovate-config"
  ],
  "packageRules": [
    {
      "groupName": "rollup optional binaries",
      "matchDepTypes": [
        "optionalDependencies"
      ],
      "matchPackageNames": [
        "/^@rollup/rollup-/"
      ]
    },
    {
      "groupName": "lightningcss optional binaries",
      "matchDepTypes": [
        "optionalDependencies"
      ],
      "matchPackageNames": [
        "/^lightningcss-/"
      ]
    },
    {
      "groupName": "cloudflare workerd optional binaries",
      "matchDepTypes": [
        "optionalDependencies"
      ],
      "matchPackageNames": [
        "/^@cloudflare/workerd-/"
      ]
    },
    {
      "groupName": "sharp optional binaries",
      "matchDepTypes": [
        "optionalDependencies"
      ],
      "matchPackageNames": [
        "/^@img/sharp-/"
      ]
    }
  ]
}
