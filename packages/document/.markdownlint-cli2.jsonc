
{
  "fix": true,
  "globs": [
    "../../*.md",
    "../../.github/**/*.md",
    "../../docs/**/*.md",
    "../../packages/**/*.md",
    "!../../packages/*/node_modules"
  ],
  "outputFormatters": [
    ["markdownlint-cli2-formatter-pretty", { "appendLink": true }]
  ],
  "config": {
    "first-line-h1": false,
    "line-length": false,
    "no-duplicate-heading": false
  }
}