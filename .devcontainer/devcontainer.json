{
  "name": "Node 22.19.0 + TypeScript",
  "image": "node:22.19.0-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "containerEnv": {
    "NODE_ENV": "development"
  },
  "remoteUser": "root",
  "mounts": [
    "target=/root/.npm",
    "source=pnpm-store,target=/root/.pnpm-store",
    "source=${localEnv:HOME}/.codex,target=/root/.codex,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.ssh/config,target=/root/.ssh/config,type=bind,consistency=cached"
  ],
  "forwardPorts": [
    5173
  ],
  "postCreateCommand": "bash -l .devcontainer/scripts/setup-pnpm.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        "github.vscode-github-actions",
        "openai.chatgpt",
        "streetsidesoftware.code-spell-checker",
        "eamodio.gitlens",
        "docker.docker",
        "tamasfe.even-better-toml",
        "mhutchie.git-graph",
        "oderwat.indent-rainbow",
        "MS-CEINTL.vscode-language-pack-ja",
        "bierner.markdown-mermaid",
        "DavidAnson.vscode-markdownlint",
        "svelte.svelte-vscode",
        "bradlc.vscode-tailwindcss",
        "pmneo.tsimporter",
        "vscodevim.vim",
        "redhat.vscode-yaml",
        "Vue.volar"
      ],
      "settings": {
        "typescript.tsdk": "node_modules/typescript/lib",
        "editor.formatOnSave": true
      }
    }
  }
}
