{
  "name": "ac-extreme-mercenaries",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "test": "pnpm -r --if-present run test",
    "build": "pnpm -r --if-present run build",
    "coverage": "pnpm -r --if-present run coverage",
    "lint": "pnpm -r --if-present run lint",
    "typecheck": "pnpm -r --if-present run typecheck",
    "discord-bot": "pnpm --filter @ac-extreme-mercenaries/discord-bot",
    "discord-bot:dev": "pnpm --filter @ac-extreme-mercenaries/discord-bot run dev",
    "front": "pnpm --filter @ac-extreme-mercenaries/front",
    "front:dev": "pnpm --filter @ac-extreme-mercenaries/front run dev",
    "e2e": "pnpm --filter @ac-extreme-mercenaries/e2e",
    "adr:new": "pnpm exec log4brains adr new",
    "adr:preview": "pnpm exec log4brains preview"
  },
  "engines": {
    "node": ">=22.18.0"
  },
  "packageManager": "pnpm@10.17.0",
  "workspaces": [
    "packages/discord-bot",
    "packages/front",
    "packages/e2e"
  ],
  "devDependencies": {
    "@ysk8hori/typescript-graph": "0.26.4",
    "globals": "16.3.0"
  },
  "dependencies": {
    "@ac-extreme-mercenaries/front": "workspace:*"
  }
}
