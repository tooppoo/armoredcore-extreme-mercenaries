{
  "name": "ac-extreme-mercenaries",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "test": "npm run run-all -- test",
    "build": "npm run run-all -- build",
    "coverage": "npm run run-all -- coverage",
    "lint": "npm run run-all -- lint",
    "typecheck": "npm run run-all -- typecheck",
    "run-all": "npm run --workspaces --if-present",
    "discord-bot": "npm run -w @ac-extreme-mercenaries/discord-bot",
    "discord-bot:install": "npm install -w @ac-extreme-mercenaries/discord-bot",
    "discord-bot:uninstall": "npm uninstall -w @ac-extreme-mercenaries/discord-bot",
    "discord-bot:dev": "npm run discord-bot -- dev",
    "front": "npm run -w @ac-extreme-mercenaries/front",
    "front:install": "npm install -w @ac-extreme-mercenaries/front",
    "front:uninstall": "npm uninstall -w @ac-extreme-mercenaries/front",
    "front:dev": "npm run front -- dev",
    "e2e": "npm run -w @ac-extreme-mercenaries/e2e",
    "e2e:install": "npm install -w @ac-extreme-mercenaries/e2e",
    "e2e:uninstall": "npm uninstall -w @ac-extreme-mercenaries/e2e",
    "adr:new": "npx log4brains adr new",
    "adr:preview": "npx log4brains preview"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "packages/discord-bot",
    "packages/front",
    "packages/e2e"
  ],
  "devDependencies": {
    "@ysk8hori/typescript-graph": "0.26.4"
  },
  "dependencies": {
    "@ac-extreme-mercenaries/front": "^1.0.1"
  }
}
